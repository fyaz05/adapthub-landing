---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar";
import Footer from "../components/Footer.astro";
import SpotlightButton from "../components/SpotlightButton";
---

<Layout title="404 | Page Not Found" noindex>
  <Navbar client:load />
  <main class="relative h-screen flex flex-col items-center justify-center overflow-hidden bg-void">
    <div class="absolute inset-0 bg-[radial-gradient(circle_at_center,rgba(13,148,136,0.1),transparent_70%)] pointer-events-none" />
    
    <div class="container mx-auto px-4 relative z-10 text-center">
      <h1 class="text-[10rem] md:text-[15rem] font-bold text-white/5 font-mono select-none pointer-events-none absolute left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2">
        404
      </h1>
      
      <div class="space-y-8">
        <div class="inline-block px-3 py-1 rounded-full border border-brand-teal/30 bg-brand-teal/5 font-mono text-xs text-brand-teal tracking-widest uppercase mb-4">
          Error_Code: 0x404
        </div>
        
        <h2 class="text-4xl md:text-6xl font-serif text-white italic">
           Lost in the <span class="text-brand-teal">Lattice</span>
        </h2>
        
        <p class="text-zinc-400 text-lg max-w-md mx-auto font-sans leading-relaxed">
          The node you are looking for has been decommissioned or moved to a different sector.
        </p>
        
        <div class="pt-8 flex justify-center">
          <SpotlightButton 
            client:load
            href="/"
            className="px-10 py-4 bg-accent-yellow text-black font-bold rounded-full shadow-[0_0_40px_rgba(252,211,77,0.2)] flex items-center gap-2 group transition-all"
          >
            Re-route to Terminal
            <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 group-hover:translate-x-1 transition-transform" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M5 12h14"/><path d="m12 5 7 7-7 7"/></svg>
          </SpotlightButton>
        </div>
      </div>
    </div>
  </main>
  <Footer />
</Layout>
