---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar";
import Footer from "../components/Footer.astro";
import { resolvedContent as CONTENT } from "../utils/config";

const lastUpdated = "22 February 2026";
---

<Layout 
  title={CONTENT.metadata.privacyPolicy.title}
  description={CONTENT.metadata.privacyPolicy.description}
  keywords={CONTENT.metadata.privacyPolicy.keywords}
  noindex
>
  <Navbar client:load transition:persist />

  <main id="main-content" class="relative isolate pt-32 pb-32 min-h-screen bg-void selection:bg-brand-teal/30 selection:text-white">
    {/* Cinematic Film Grain */}
    <svg class="absolute inset-0 w-full h-full pointer-events-none z-[1] opacity-[0.035]" aria-hidden="true">
      <filter id="legal-grain">
        <feTurbulence type="fractalNoise" baseFrequency="0.65" numOctaves="4" stitchTiles="stitch" />
        <feColorMatrix type="saturate" values="0" />
      </filter>
      <rect width="100%" height="100%" filter="url(#legal-grain)" />
    </svg>

    {/* Ambient Architectural Grid Lines */}
    <div class="absolute inset-0 pointer-events-none flex justify-center z-[1] opacity-50 overflow-hidden" aria-hidden="true">
      <div class="w-full max-w-[1800px] h-full flex justify-between px-4 sm:px-6 md:px-12 lg:px-24">
        <div class="w-px h-full bg-gradient-to-b from-transparent via-white/[0.04] to-transparent"></div>
        <div class="w-px h-full bg-gradient-to-b from-transparent via-white/[0.02] to-transparent hidden lg:block"></div>
        <div class="w-px h-full bg-gradient-to-b from-transparent via-white/[0.04] to-transparent"></div>
      </div>
    </div>

    <div class="container mx-auto px-4 sm:px-6 md:px-12 lg:px-24 relative z-10 max-w-[1800px]">
      
      <header class="mb-16 md:mb-24 page-stagger max-w-4xl" style="--i:1">
        <div class="font-mono text-[10px] md:text-xs text-brand-teal uppercase tracking-[0.2em] mb-6 flex items-center gap-3">
          <span class="w-2 h-2 bg-brand-teal block"></span>
          Document Classification: Legal
        </div>
        <h1 class="text-[3rem] sm:text-6xl md:text-7xl lg:text-[5.5rem] font-serif text-white tracking-tight leading-none mb-8 relative">
          Privacy <br/>
          <span class="text-zinc-500 italic block pb-2 mt-2">Policy Structure</span>
        </h1>
        <div class="flex flex-col sm:flex-row sm:items-center gap-4 text-zinc-400 font-mono text-xs md:text-sm border-b border-white/10 pb-8">
          <div class="flex items-center gap-2">
            <span class="w-1.5 h-1.5 rounded-full bg-brand-teal animate-pulse"></span>
            <span>STATUS: ACTIVE</span>
          </div>
          <span class="hidden sm:block text-white/20">|</span>
          <span>LAST UPDATED: {lastUpdated}</span>
          <span class="hidden sm:block text-white/20">|</span>
          <span>ENTITY: ADAPTHUB PVT. LTD.</span>
        </div>
      </header>

      <div class="grid grid-cols-1 lg:grid-cols-12 gap-12 lg:gap-24">
        
        {/* Sticky Sidebar / TOC */}
        <aside class="lg:col-span-4 relative hidden md:block">
          <div class="sticky top-32 page-stagger" style="--i:2">
            <h2 class="font-mono text-[10px] sm:text-xs tracking-[0.2em] text-zinc-500 uppercase mb-6 flex items-center gap-3">
              <span class="w-2 h-2 bg-brand-teal/40 block"></span>
              Index Directory
            </h2>
            <nav class="flex flex-col gap-3 border-l border-white/10 pl-4 relative" id="toc-nav">
              {/* Active Section Indicator - Updated via JS if desired, static for now */}
              <div class="absolute top-0 -left-[1px] w-[2px] h-0 bg-brand-teal transition-all duration-300" id="toc-indicator"></div>
              
              <a href="#sec-1" class="font-mono text-sm text-zinc-400 hover:text-brand-teal transition-colors py-1 hover:translate-x-2 transform duration-300 w-fit focus-visible:outline-none focus-visible:text-brand-teal">01. Data Collection</a>
              <a href="#sec-2" class="font-mono text-sm text-zinc-400 hover:text-brand-teal transition-colors py-1 hover:translate-x-2 transform duration-300 w-fit focus-visible:outline-none focus-visible:text-brand-teal">02. Data Usage</a>
              <a href="#sec-3" class="font-mono text-sm text-zinc-400 hover:text-brand-teal transition-colors py-1 hover:translate-x-2 transform duration-300 w-fit focus-visible:outline-none focus-visible:text-brand-teal">03. Data Sharing</a>
              <a href="#sec-4" class="font-mono text-sm text-zinc-400 hover:text-brand-teal transition-colors py-1 hover:translate-x-2 transform duration-300 w-fit focus-visible:outline-none focus-visible:text-brand-teal">04. Global Transfers</a>
              <a href="#sec-5" class="font-mono text-sm text-zinc-400 hover:text-brand-teal transition-colors py-1 hover:translate-x-2 transform duration-300 w-fit focus-visible:outline-none focus-visible:text-brand-teal">05. User Rights</a>
              <a href="#sec-6" class="font-mono text-sm text-zinc-400 hover:text-brand-teal transition-colors py-1 hover:translate-x-2 transform duration-300 w-fit focus-visible:outline-none focus-visible:text-brand-teal">06. Data Retention</a>
              <a href="#sec-7" class="font-mono text-sm text-zinc-400 hover:text-brand-teal transition-colors py-1 hover:translate-x-2 transform duration-300 w-fit focus-visible:outline-none focus-visible:text-brand-teal">07. Tracking Technologies</a>
              <a href="#sec-8" class="font-mono text-sm text-zinc-400 hover:text-brand-teal transition-colors py-1 hover:translate-x-2 transform duration-300 w-fit focus-visible:outline-none focus-visible:text-brand-teal">08. Security</a>
              <a href="#sec-9" class="font-mono text-sm text-zinc-400 hover:text-brand-teal transition-colors py-1 hover:translate-x-2 transform duration-300 w-fit focus-visible:outline-none focus-visible:text-brand-teal">09. Age Limits</a>
              <a href="#sec-10" class="font-mono text-sm text-zinc-400 hover:text-brand-teal transition-colors py-1 hover:translate-x-2 transform duration-300 w-fit focus-visible:outline-none focus-visible:text-brand-teal">10. Grievance Redressal</a>
              <a href="#sec-11" class="font-mono text-sm text-zinc-400 hover:text-brand-teal transition-colors py-1 hover:translate-x-2 transform duration-300 w-fit focus-visible:outline-none focus-visible:text-brand-teal">11. Contact Us</a>
            </nav>
          </div>
        </aside>

        {/* Content Body */}
        <div class="lg:col-span-8 max-w-3xl prose prose-invert prose-zinc prose-headings:font-serif prose-headings:text-white prose-headings:font-medium prose-h2:text-2xl md:prose-h2:text-3xl md:prose-h2:mt-16 prose-h2:mt-12 prose-h2:mb-6 prose-p:text-zinc-400 prose-p:leading-[1.75] prose-p:font-sans prose-p:text-base md:prose-p:text-lg prose-a:text-brand-teal prose-a:no-underline hover:prose-a:text-brand-violet transition-colors prose-li:text-zinc-400 prose-li:leading-[1.75] prose-strong:text-zinc-200 prose-strong:font-medium page-stagger" style="--i:3">
          
          <p class="text-xl md:text-2xl text-zinc-300 font-serif leading-relaxed mb-12">
            <strong>AdaptHub Private Limited</strong> ("AdaptHub", "we", "us", or "our") operates adapthub.in and provides this Privacy Policy to explain our data practices. By accessing or using the Service, you consent to this Policy.
          </p>

          <div class="group relative pt-8 md:pt-10 border-t border-white/[0.06] hover:border-brand-teal/30 transition-colors duration-500 mt-16 scroll-mt-32" id="sec-1">
            <div class="flex items-end justify-between mb-6 md:mb-8">
              <div class="font-mono text-[10px] md:text-xs text-brand-teal uppercase tracking-[0.2em]">[ Section.01 ]</div>
              <div class="w-8 h-px bg-white/10 group-hover:bg-brand-teal/50 transition-colors duration-500 hidden sm:block"></div>
            </div>
            <h2 class="mt-0 pt-0">Data Collection</h2>
            <p>To operate the Service and improve our technology, we collect the following:</p>
            <ul class="space-y-2 mt-4">
              <li><strong class="text-white bg-white/5 py-0.5 px-2 rounded-sm mr-2 font-mono text-xs uppercase tracking-wider">Account Info</strong> Personal identifiers provided during registration.</li>
              <li><strong class="text-white bg-white/5 py-0.5 px-2 rounded-sm mr-2 font-mono text-xs uppercase tracking-wider">User Inputs</strong> Any text, files, code, queries, or materials you submit.</li>
              <li><strong class="text-white bg-white/5 py-0.5 px-2 rounded-sm mr-2 font-mono text-xs uppercase tracking-wider">Technical Data</strong> Device, OS, IP address, browser, network, and location data.</li>
              <li><strong class="text-white bg-white/5 py-0.5 px-2 rounded-sm mr-2 font-mono text-xs uppercase tracking-wider">Usage Metrics</strong> Interactions, session duration, logs, and analytics.</li>
            </ul>
          </div>

          <div class="group relative pt-8 md:pt-10 border-t border-white/[0.06] hover:border-brand-teal/30 transition-colors duration-500 mt-16 scroll-mt-32" id="sec-2">
            <div class="flex items-end justify-between mb-6 md:mb-8">
              <div class="font-mono text-[10px] md:text-xs text-brand-teal uppercase tracking-[0.2em]">[ Section.02 ]</div>
              <div class="w-8 h-px bg-white/10 group-hover:bg-brand-teal/50 transition-colors duration-500 hidden sm:block"></div>
            </div>
            <h2 class="mt-0 pt-0">Data Usage</h2>
            <p>We use your data for:</p>
            <ul class="space-y-2">
              <li>Providing, maintaining, and improving the Service (including generating outputs).</li>
              <li>Authenticating users and delivering results.</li>
              <li><strong>System Training:</strong> Using de-identified or aggregated User Inputs to analyze trends and train AI models.</li>
              <li>Communication: Service updates and security alerts.</li>
              <li>Enforcement: Detecting fraud, abuse, and enforcing our Terms.</li>
            </ul>
            <div class="bg-white/[0.02] border border-white/[0.05] p-6 rounded-sm mt-8">
              <p class="m-0 text-sm"><strong>Aggregated Telemetry:</strong> Once fully anonymized or aggregated, this data is no longer Personal Data. We may use, share, or sell it for any purpose without notice or compensation.</p>
            </div>
          </div>

          <div class="group relative pt-8 md:pt-10 border-t border-white/[0.06] hover:border-brand-teal/30 transition-colors duration-500 mt-16 scroll-mt-32" id="sec-3">
            <div class="flex items-end justify-between mb-6 md:mb-8">
              <div class="font-mono text-[10px] md:text-xs text-brand-teal uppercase tracking-[0.2em]">[ Section.03 ]</div>
              <div class="w-8 h-px bg-white/10 group-hover:bg-brand-teal/50 transition-colors duration-500 hidden sm:block"></div>
            </div>
            <h2 class="mt-0 pt-0">Data Sharing</h2>
            <p>We do not sell Personal Data. We disclose data only to:</p>
             <ul class="space-y-2 mt-4">
              <li><strong class="text-white bg-white/5 py-0.5 px-2 rounded-sm mr-2 font-mono text-xs uppercase tracking-wider">Service Providers</strong> Vendors for hosting, payments, analytics, support (under strict contracts).</li>
              <li><strong class="text-white bg-white/5 py-0.5 px-2 rounded-sm mr-2 font-mono text-xs uppercase tracking-wider">Business Transfers</strong> In mergers, acquisitions, or asset sales.</li>
              <li><strong class="text-white bg-white/5 py-0.5 px-2 rounded-sm mr-2 font-mono text-xs uppercase tracking-wider">Legal Mandates</strong> To comply with law, protect rights, safety, or respond to lawful requests.</li>
            </ul>
          </div>

          <div class="group relative pt-8 md:pt-10 border-t border-white/[0.06] hover:border-brand-teal/30 transition-colors duration-500 mt-16 scroll-mt-32" id="sec-4">
            <div class="flex items-end justify-between mb-6 md:mb-8">
              <div class="font-mono text-[10px] md:text-xs text-brand-teal uppercase tracking-[0.2em]">[ Section.04 ]</div>
              <div class="w-8 h-px bg-white/10 group-hover:bg-brand-teal/50 transition-colors duration-500 hidden sm:block"></div>
            </div>
            <h2 class="mt-0 pt-0">Global Transfers</h2>
            <p>Your data may be transferred to and processed in India and other countries where we or our providers operate. By using the Service, <strong class="text-white">you explicitly consent</strong> to these transfers.</p>
          </div>

          <div class="group relative pt-8 md:pt-10 border-t border-white/[0.06] hover:border-brand-teal/30 transition-colors duration-500 mt-16 scroll-mt-32" id="sec-5">
            <div class="flex items-end justify-between mb-6 md:mb-8">
              <div class="font-mono text-[10px] md:text-xs text-brand-teal uppercase tracking-[0.2em]">[ Section.05 ]</div>
              <div class="w-8 h-px bg-white/10 group-hover:bg-brand-teal/50 transition-colors duration-500 hidden sm:block"></div>
            </div>
            <h2 class="mt-0 pt-0">User Rights</h2>
            <p>Subject to applicable law, you may request access, correction, erasure, restriction, portability, or withdrawal of consent by contacting our Grievance Officer. We will respond within the time required by law.</p>
          </div>

          <div class="group relative pt-8 md:pt-10 border-t border-white/[0.06] hover:border-brand-teal/30 transition-colors duration-500 mt-16 scroll-mt-32" id="sec-6">
            <div class="flex items-end justify-between mb-6 md:mb-8">
              <div class="font-mono text-[10px] md:text-xs text-brand-teal uppercase tracking-[0.2em]">[ Section.06 ]</div>
              <div class="w-8 h-px bg-white/10 group-hover:bg-brand-teal/50 transition-colors duration-500 hidden sm:block"></div>
            </div>
            <h2 class="mt-0 pt-0">Data Retention</h2>
            <p>We retain data only as long as necessary for the purposes above or as required by law. Upon valid request or account termination, we delete or anonymize it within a reasonable time (subject to legal holds).</p>
          </div>

          <div class="group relative pt-8 md:pt-10 border-t border-white/[0.06] hover:border-brand-teal/30 transition-colors duration-500 mt-16 scroll-mt-32" id="sec-7">
            <div class="flex items-end justify-between mb-6 md:mb-8">
              <div class="font-mono text-[10px] md:text-xs text-brand-teal uppercase tracking-[0.2em]">[ Section.07 ]</div>
              <div class="w-8 h-px bg-white/10 group-hover:bg-brand-teal/50 transition-colors duration-500 hidden sm:block"></div>
            </div>
            <h2 class="mt-0 pt-0">Tracking Technologies</h2>
            <p>We use cookies, pixels, logs, and similar technologies. You may disable them via browser settings, but this may limit Service functionality.</p>
          </div>

          <div class="group relative pt-8 md:pt-10 border-t border-white/[0.06] hover:border-brand-teal/30 transition-colors duration-500 mt-16 scroll-mt-32" id="sec-8">
            <div class="flex items-end justify-between mb-6 md:mb-8">
              <div class="font-mono text-[10px] md:text-xs text-brand-teal uppercase tracking-[0.2em]">[ Section.08 ]</div>
              <div class="w-8 h-px bg-white/10 group-hover:bg-brand-teal/50 transition-colors duration-500 hidden sm:block"></div>
            </div>
            <h2 class="mt-0 pt-0">Security</h2>
            <p>We implement reasonable security practices (including encryption and access controls). However, no internet transmission or storage is 100% secure. <strong class="text-white border-b border-brand-teal/40">We expressly disclaim any guarantee of absolute security.</strong></p>
          </div>

          <div class="group relative pt-8 md:pt-10 border-t border-white/[0.06] hover:border-brand-teal/30 transition-colors duration-500 mt-16 scroll-mt-32" id="sec-9">
            <div class="flex items-end justify-between mb-6 md:mb-8">
              <div class="font-mono text-[10px] md:text-xs text-brand-teal uppercase tracking-[0.2em]">[ Section.09 ]</div>
              <div class="w-8 h-px bg-white/10 group-hover:bg-brand-teal/50 transition-colors duration-500 hidden sm:block"></div>
            </div>
            <h2 class="mt-0 pt-0">Age Limits</h2>
            <p>The Service is strictly for users <strong class="text-white">18 years and older</strong>. We do not knowingly collect data from minors. Any such data discovered will be immediately deleted.</p>
          </div>

          <div class="group relative pt-8 md:pt-10 border-t border-white/[0.06] hover:border-brand-teal/30 transition-colors duration-500 mt-16 scroll-mt-32" id="sec-10">
            <div class="flex items-end justify-between mb-6 md:mb-8">
              <div class="font-mono text-[10px] md:text-xs text-brand-teal uppercase tracking-[0.2em]">[ Section.10 ]</div>
              <div class="w-8 h-px bg-white/10 group-hover:bg-brand-teal/50 transition-colors duration-500 hidden sm:block"></div>
            </div>
            <h2 class="mt-0 pt-0">Grievance Redressal</h2>
            <div class="grid sm:grid-cols-2 gap-6 mt-6">
              <div class="bg-white/[0.02] border border-white/[0.05] p-6 rounded-sm">
                <p class="font-mono text-[10px] text-zinc-500 uppercase tracking-widest mb-2 mt-0">Grievance Officer</p>
                <p class="text-white font-serif text-xl m-0">Fyaz Mohammed</p>
                <p class="text-sm text-zinc-400 mt-1 mb-4">Founder</p>
                <a href="mailto:grievance@adapthub.in" class="inline-flex items-center gap-2 font-mono text-xs text-brand-teal hover:text-brand-violet transition-colors">
                  <span>grievance@adapthub.in</span>
                  <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="7" y1="17" x2="17" y2="7"></line><polyline points="7 7 17 7 17 17"></polyline></svg>
                </a>
              </div>
              <div class="flex items-center">
                 <p class="text-sm text-zinc-400 m-0">You may raise any grievance regarding data processing by emailing the officer. We will address it within one month.</p>
              </div>
            </div>
          </div>

          <div class="group relative pt-8 md:pt-10 border-t border-white/[0.06] hover:border-brand-teal/30 transition-colors duration-500 mt-16 scroll-mt-32" id="sec-11">
            <div class="flex items-end justify-between mb-6 md:mb-8">
              <div class="font-mono text-[10px] md:text-xs text-brand-teal uppercase tracking-[0.2em]">[ Section.11 ]</div>
              <div class="w-8 h-px bg-white/10 group-hover:bg-brand-teal/50 transition-colors duration-500 hidden sm:block"></div>
            </div>
            <h2 class="mt-0 pt-0">Contact Us</h2>
            <p>For general queries: <a href="mailto:support@adapthub.in" class="border-b border-brand-teal/30 pb-0.5 hover:border-brand-teal transition-colors">support@adapthub.in</a></p>
            <p class="text-sm text-zinc-500 italic mt-8">This Policy may be updated from time to time. Continued use after updates constitutes acceptance.</p>
          </div>

        </div>
      </div>
    </div>
  </main>

  <Footer />

  <script>
    // Simple intersection observer to highlight TOC
    document.addEventListener('astro:page-load', () => {
      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
             const id = entry.target.getAttribute('id');
             const links = document.querySelectorAll('#toc-nav a');
             links.forEach(link => {
                if (link.getAttribute('href') === `#${id}`) {
                   link.classList.add('text-brand-teal', 'translate-x-2');
                   link.classList.remove('text-zinc-400');
                } else {
                   link.classList.remove('text-brand-teal', 'translate-x-2');
                   link.classList.add('text-zinc-400');
                }
             });
          }
        });
      }, { rootMargin: '-20% 0px -80% 0px' });

      document.querySelectorAll('[id^="sec-"]').forEach(section => {
        observer.observe(section);
      });
    });
  </script>
</Layout>
