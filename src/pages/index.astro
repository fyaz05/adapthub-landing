---
interface FAQItem {
  id: string;
  question: string;
  answer: string;
}
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import AnnouncementBar from "../components/AnnouncementBar";
import Navbar from "../components/Navbar";
import BentoGrid from "../components/BentoGrid";
import VelocityDashboard from "../components/VelocityDashboard";
import StreakMatrix from "../components/StreakMatrix";
import TheLens from "../components/TheLens";
import FAQ from "../components/FAQ";
import BackgroundPulse from "../components/BackgroundPulse";
import PhilosophySection from "../components/PhilosophySection.astro";
import SocraticCoach from "../components/SocraticCoach";
import Footer from "../components/Footer.astro";
import { resolvedContent as CONTENT } from "../utils/config";
---

<Layout
  title={CONTENT.metadata.indexPage.title}
  description={CONTENT.metadata.indexPage.description}
  keywords={CONTENT.metadata.indexPage.keywords}
  showLoadingScreen={true}
>
  <script
    slot="head"
    type="application/ld+json"
    is:inline
    set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "FAQPage",
      "mainEntity": CONTENT.faq.items.map((item: FAQItem) => ({
        "@type": "Question",
        "name": item.question,
        "acceptedAnswer": {
          "@type": "Answer",
          "text": item.answer,
        },
      })),
    })}
  />
  <AnnouncementBar client:load transition:persist />
  <Navbar client:load transition:persist />
  <main id="main-content" class="relative isolate">
    <BackgroundPulse client:load />
    <Hero />
    <PhilosophySection />
    <SocraticCoach client:visible />
    <TheLens client:visible />
    <BentoGrid client:visible />
    <VelocityDashboard client:visible />
    <StreakMatrix client:visible />
    <FAQ client:visible />

    {/* Internal Links â€“ SEO hub */}
    <section aria-label="Platform Resources" class="relative z-10 border-t border-white/[0.06] py-16">
      <div class="container mx-auto px-4 sm:px-6 md:px-12 lg:px-24 max-w-[1800px]">
        <p class="font-mono text-[10px] text-zinc-500 uppercase tracking-[0.2em] mb-8">[ Platform Resources ]</p>
        <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-6 gap-4 md:gap-6">
          {[
            { href: "/adaptive-learning-cat/", label: "Adaptive Learning & CAT" },
            { href: "/adapthub-vs-competitors/", label: "AdaptHub vs Coaching" },
            { href: "/cat-2026-exam-date/", label: "CAT 2026 Exam Date" },
            { href: "/cat-preparation-without-coaching/", label: "CAT Without Coaching" },
            { href: "/cat-syllabus/", label: "CAT Syllabus" },
            { href: "/pricing/", label: "Free Forever Pricing" },
          ].map((link) => (
            <a
              href={link.href}
              class="font-sans text-xs text-zinc-500 hover:text-brand-teal transition-colors duration-300 leading-snug"
            >
              {link.label}
            </a>
          ))}
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>
