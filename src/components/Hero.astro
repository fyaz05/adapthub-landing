---
import HeroBackground from "./HeroBackground";
import SectionSpotlight from "./SectionSpotlight";
import ParallaxDashboard from "./ParallaxDashboard";
import SpotlightButton from "./SpotlightButton";
import { CONTENT } from "../constants/content";
import heroImage from "../assets/hero.avif";
import { getImage } from "astro:assets";
const { src: optimizedHeroImg } = await getImage({ src: heroImage, width: 1200, format: 'avif' });
---

<section
  class="relative min-h-[100svh] flex flex-col bg-zinc-950 p-3 sm:p-4 md:p-6 lg:p-8 selection:bg-brand-teal/30 selection:text-white"
  aria-label="Cognitive Calibration Hero"
>
  {/* ── The Hardware Inset Frame ── */}
  <div class="hero-frame relative flex-1 flex flex-col justify-between overflow-x-hidden overflow-y-clip border border-white/10 bg-void shadow-[0_0_60px_rgba(0,0,0,0.5)] pt-20 sm:pt-32 lg:pt-40 mt-[65px] sm:mt-0">

  {/* ── Environment & Atmosphere ── */}
  <HeroBackground client:load />
  <SectionSpotlight client:load color="rgba(13, 148, 136, 0.12)" />

  {/* Cinematic Film Grain */}
  <svg
    class="absolute inset-0 w-full h-full pointer-events-none z-[1] opacity-[0.035] mix-blend-screen"
    aria-hidden="true"
  >
    <filter id="hero-grain">
      <feTurbulence type="fractalNoise" baseFrequency="0.65" numOctaves="4" stitchTiles="stitch" />
      <feColorMatrix type="saturate" values="0" />
    </filter>
    <rect width="100%" height="100%" filter="url(#hero-grain)" />
  </svg>

  {/* Micro-dot Architectural Grid */}
  <div class="absolute inset-0 bg-[radial-gradient(rgba(255,255,255,0.1)_1px,transparent_1px)] bg-[size:32px_32px] opacity-20 pointer-events-none z-[1]" aria-hidden="true"></div>

  {/* GPU-Accelerated Atmospheric Scanline */}
  <div class="hero-scanline" aria-hidden="true"></div>

  {/* Tactical Corner Coordinates (lg+) */}
  <div class="hidden lg:flex items-center gap-2 absolute top-28 left-8 z-[30] hero-fade" style="--delay:900ms" aria-hidden="true">
    <div class="w-3 h-3 border-l border-t border-zinc-700/60"></div>
    <span class="font-mono text-[9px] text-zinc-500 tracking-[0.25em] uppercase select-none">sys.active</span>
  </div>
  <div class="hidden lg:flex items-center gap-2 absolute top-28 right-8 z-[30] hero-fade" style="--delay:900ms" aria-hidden="true">
    <span class="font-mono text-[9px] text-zinc-500 tracking-[0.25em] uppercase select-none">1.0.0</span>
    <div class="w-3 h-3 border-r border-t border-zinc-700/60"></div>
  </div>

  {/* ── Core Layout Container ── */}
  <div class="relative z-elevate flex-1 flex flex-col w-full max-w-[1800px] mx-auto px-4 sm:px-6 md:px-12 lg:px-24 pb-6 sm:pb-8">
      
    {/* Upper Zone: Typographic Drama + Dashboard Intersection */}
    <div class="flex-1 flex flex-col justify-center mt-4 sm:mt-0">

      {/* Monumental Width-Breaking Headline */}
      <div class="relative z-20 hero-stagger" style="--i:0">
        {/* Deep Radial Halo behind typography */}
        <div
          class="absolute -top-[50%] -left-[5%] w-[60%] h-[220%] pointer-events-none select-none opacity-80 mix-blend-screen"
          style="background:radial-gradient(ellipse 60% 50% at 30% 50%, rgba(13,148,136,0.08) 0%, transparent 70%)"
          aria-hidden="true"
        />
        <h1 class="hero-headline relative text-white">
          <span class="block">{CONTENT.hero.title.line1}</span>
          <span class="hero-highlight block italic text-brand-teal pb-2">
            {CONTENT.hero.title.highlight}
          </span>
        </h1>
      </div>

      {/* Narrative & Interface Split */}
      <div class="mt-6 sm:mt-8 lg:mt-12 grid grid-cols-1 lg:grid-cols-12 gap-y-10 lg:gap-x-8 items-start">
        
        {/* Left Col: Narrative & Action */}
        <div class="lg:col-span-5 xl:col-span-4 relative z-20 hero-stagger" style="--i:1">
          <p data-speakable class="text-zinc-400 text-sm sm:text-base lg:text-[1.0625rem] leading-relaxed lg:leading-[1.75] max-w-lg tracking-wide selection:bg-brand-teal/30 selection:text-white">
            {CONTENT.hero.description}
          </p>

          <div class="flex flex-col xs:flex-row items-start xs:items-center gap-4 sm:gap-6 mt-8 sm:mt-10">
            {/* Primary Action Button */}
            <div class="relative group">
              <SpotlightButton
                client:load
                href={CONTENT.links.app}
                target="_blank"
                rel="noopener noreferrer"
                className="relative overflow-hidden w-full xs:w-auto px-7 sm:px-9 md:px-10 py-3.5 sm:py-4 md:py-[1.125rem] bg-accent-yellow text-black font-bold text-sm md:text-[0.9375rem] rounded-none shadow-[0_0_32px_rgba(252,211,77,0.15)] hover:shadow-[0_0_56px_rgba(252,211,77,0.35)] flex items-center justify-center gap-2.5 transition-all duration-500 touch-manipulation whitespace-nowrap"
              >
                {/* Square brutalist button */}
                <span class="relative z-10 flex items-center gap-2">
                  {CONTENT.hero.cta.primary}
                  <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 transition-transform duration-400 group-hover:translate-x-1 group-hover:-translate-y-1" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                    <path d="M7 17L17 7" /><path d="M7 7h10v10" />
                  </svg>
                </span>
              </SpotlightButton>
            </div>

            {/* Ghost Action Button -> Strategic Internal Link */}
            <a href="/about" class="group inline-flex items-center gap-3 py-3.5 sm:py-4 font-mono text-[11px] text-zinc-400 uppercase tracking-[0.15em] hover:text-white active:scale-95 transition-all duration-300 touch-manipulation outline-none focus-visible:text-brand-teal">
              <span class="block w-3 h-3 border border-zinc-700 group-hover:border-brand-teal group-hover:bg-brand-teal/20 transition-all duration-300" aria-hidden="true"></span>
              {CONTENT.hero.cta.secondary}
            </a>
          </div>
        </div>

        {/* Right Col: Dashboard Intrusion (Deliberately overlaps headline bounds) */}
        <div class="lg:col-start-6 lg:col-span-7 relative z-10 lg:-mt-24 xl:-mt-32 hero-stagger" style="--i:2">
          <div class="lg:-mr-8 xl:-mr-20 2xl:-mr-32 relative">
            <ParallaxDashboard client:load heroImage={optimizedHeroImg} />
          </div>
        </div>
      </div>
    </div>

    {/* ── Lower Zone: High-Fidelity Telemetry ── */}
    <div class="relative z-20 w-full pt-8 sm:pt-10 mt-12 sm:mt-16 lg:mt-24 border-t border-white/[0.06] hero-stagger" style="--i:3">
      <div class="flex flex-wrap lg:flex-nowrap items-end justify-between gap-y-10">

        {/* High-Fidelity Telemetry // Avant-Garde Overhaul */}
        <div class="group/telemetry flex flex-col sm:flex-row items-start lg:items-end gap-16 lg:gap-32 w-full lg:w-auto mt-4 lg:mt-0">
          
          {/* Node 1: Volume */}
          <div class="relative flex flex-col transition-transform duration-700 ease-[cubic-bezier(0.19,1,0.22,1)] hover:translate-x-4 cursor-crosshair">
            <span class="font-mono text-[10px] text-zinc-500 uppercase tracking-[0.4em] mb-4 flex items-center gap-3">
              <span class="w-1 h-1 bg-brand-teal animate-pulse opacity-70" aria-hidden="true"></span>
              Volume // '25
            </span>
            <span class="text-[3.5rem] lg:text-[5.5rem] font-light tracking-tighter leading-[0.85] text-white transition-colors duration-500 group-hover/telemetry:text-zinc-800 hover:!text-white flex items-start">
              2.58<span class="font-serif italic text-zinc-400 text-3xl lg:text-4xl ml-2 mt-2">L</span>
            </span>
          </div>

          {/* Node 2: Rarity */}
          <div class="relative flex flex-col transition-transform duration-700 ease-[cubic-bezier(0.19,1,0.22,1)] hover:translate-x-4 cursor-crosshair">
            <span class="font-mono text-[10px] text-zinc-500 uppercase tracking-[0.4em] mb-4">
              [02] 99.99%ile
            </span>
            <span class="text-[3.5rem] lg:text-[5.5rem] font-light tracking-tighter leading-[0.85] text-white transition-colors duration-500 group-hover/telemetry:text-zinc-800 hover:!text-white flex items-start">
              <span class="font-serif italic text-zinc-400 text-4xl lg:text-[3rem] mr-3 mt-1 lg:mt-3 leading-none">&lt;</span>30
            </span>
          </div>

          {/* Node 3: Access */}
          <div class="relative flex flex-col transition-transform duration-700 ease-[cubic-bezier(0.19,1,0.22,1)] hover:translate-x-4 cursor-crosshair">
            <span class="font-mono text-[10px] text-zinc-500 uppercase tracking-[0.4em] mb-4">
              [03] Platform Fee
            </span>
            <span class="text-[3.5rem] lg:text-[5.5rem] font-light tracking-tighter leading-[0.85] text-white transition-colors duration-500 group-hover/telemetry:text-zinc-800 hover:!text-white flex items-start">
              <span class="font-serif italic text-zinc-400 text-4xl lg:text-[3rem] mr-2 lg:mr-3 mt-1 lg:mt-2 leading-none">₹</span>0
            </span>
          </div>

        </div>

        {/* Downward Intent Vector */}
        <div class="hidden lg:flex flex-col items-center gap-3 select-none pb-1" aria-hidden="true">
          <span class="font-mono text-[9px] text-zinc-500 tracking-[0.2em] uppercase origin-bottom -rotate-90 translate-y-2 opacity-0 hero-fade" style="--delay: 1500ms">
            Scroll
          </span>
          <div class="w-px h-12 bg-gradient-to-b from-zinc-800 to-transparent"></div>
          <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 text-zinc-500 hero-scroll-arrow" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
            <path d="M12 5v14" /><path d="m19 12-7 7-7-7" />
          </svg>
        </div>

      </div>
    </div>

  </div>
  
  </div>
</section>

<style>
  /* ── Container Reveal ── */
  .hero-frame {
    opacity: 0;
    transform: scale(0.98);
    animation: frameReveal 1s cubic-bezier(0.16, 1, 0.3, 1) forwards;
  }
  @keyframes frameReveal {
    to { opacity: 1; transform: scale(1); }
  }

  /* ── Monumental Typography ── */
  .hero-headline {
    font-size: clamp(2rem, 7.5vw, 8.5rem);
    line-height: 0.88;
    letter-spacing: -0.035em;
    font-weight: 700;
    text-wrap: balance;
    word-break: normal;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }

  .hero-highlight {
    text-shadow: 
      0 0 80px rgba(13, 148, 136, 0.3), 
      0 0 140px rgba(13, 148, 136, 0.1);
  }

  /* ── GPU-Accelerated Atmosphere ── */
  .hero-scanline {
    position: absolute;
    top: 0;
    inset-inline: 0;
    height: 1px;
    z-index: 2;
    pointer-events: none;
    background: linear-gradient(
      90deg, 
      transparent 0%, 
      rgba(13, 148, 136, 0.08) 20%, 
      rgba(13, 148, 136, 0.25) 50%, 
      rgba(13, 148, 136, 0.08) 80%, 
      transparent 100%
    );
    box-shadow: 0 0 10px rgba(13,148,136,0.1);
    animation: scanDrift 8s linear infinite;
    will-change: transform, opacity;
  }

  @keyframes scanDrift {
    0% { transform: translateY(20vh); opacity: 0; }
    15% { opacity: 1; }
    50% { transform: translateY(80vh); }
    85% { opacity: 1; }
    100% { transform: translateY(20vh); opacity: 0; }
  }

  /* ── Accessibility & Performance Guardrails ── */
  @media (prefers-reduced-motion: reduce) {
    .hero-scanline { display: none; }
  }
</style>
