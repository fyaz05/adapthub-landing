---
import "../styles/global.css";
import "@fontsource/geist-sans";
import "@fontsource/geist-mono";
import "@fontsource/lora/400.css";
import "@fontsource/lora/700.css";
import "@fontsource/lora/400-italic.css";
import { ClientRouter } from "astro:transitions";
import LenisWrapper from "../components/LenisWrapper";
import { resolvedContent as CONTENT } from "../utils/config";

import NoiseOverlay from "../components/NoiseOverlay.astro";
import LoadingScreen from "../components/LoadingScreen";

interface Props {
  title: string;
  description?: string;
  keywords?: string[];
  noindex?: boolean;
  showLoadingScreen?: boolean;
  datePublished?: string;
  dateModified?: string;
  ogType?: "website" | "article";
}

const {
  title = CONTENT.metadata.defaultTitle,
  description = CONTENT.metadata.defaultDescription,
  keywords = CONTENT.metadata.defaultKeywords,
  noindex = false,
  showLoadingScreen = false,
  datePublished,
  dateModified = datePublished,
  ogType = "website",
} = Astro.props;
const siteUrl = Astro.site || "https://adapthub.in";
const canonicalURL = new URL(Astro.url.pathname, siteUrl);

// Dynamic breadcrumbs from URL path
const pathSegments = Astro.url.pathname.replace(/\/$/, '').split('/').filter(Boolean);
const breadcrumbItems: { "@type": string; position: number; name: string; item: string }[] = [
  { "@type": "ListItem", position: 1, name: "Home", item: String(siteUrl) }
];
if (pathSegments.length > 0) {
  const pageName = pathSegments[pathSegments.length - 1]
    .split('-').map((w: string) => w.charAt(0).toUpperCase() + w.slice(1)).join(' ');
  breadcrumbItems.push({ "@type": "ListItem", position: 2, name: pageName, item: canonicalURL.href });
}
const ogImageURL = new URL(CONTENT?.metadata?.ogImage || "/og-default.png", siteUrl);
const ogImageFallbackURL = new URL(CONTENT?.metadata?.ogImageFallback || "/og-default.png", siteUrl);
const supportEmail = CONTENT?.links?.support?.replace("mailto:", "") || "support@adapthub.in";

---

<!DOCTYPE html>
<html lang="en" class="bg-void relative" style="color-scheme: dark">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, viewport-fit=cover" />
    <link rel="preconnect" href="https://www.googletagmanager.com" />
    <link rel="preconnect" href="https://www.google-analytics.com" />
    <script is:inline async src="https://www.googletagmanager.com/gtag/js?id=G-W4K3Z0TPD8"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-W4K3Z0TPD8');
    </script>
    <link rel="icon" type="image/svg+xml" sizes="any" href="/favicon.svg" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="generator" content={Astro.generator} />
    <meta name="theme-color" content="#050505" />
    
    {/* Canonical URL */}
    <link rel="canonical" href={canonicalURL} />
    <meta name="robots" content={noindex ? "noindex,nofollow" : "index,follow,max-image-preview:large"} />

    {/* Primary Meta Tags */}
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords.join(", ")} />
    <meta name="author" content={CONTENT.global.brandName} />

    {/* Open Graph / Facebook */}
    <meta property="og:type" content={ogType} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:locale" content="en_IN" />
    <meta property="og:site_name" content={CONTENT.global.brandName} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImageURL} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:type" content="image/avif" />
    {/* PNG fallback for crawlers that don't support AVIF */}
    <meta property="og:image" content={ogImageFallbackURL} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:type" content="image/png" />
    <meta property="og:image:alt" content={description} />
    {ogType === "article" && datePublished && <meta property="article:published_time" content={datePublished} />}
    {ogType === "article" && dateModified && <meta property="article:modified_time" content={dateModified} />}

    {/* Twitter — PNG for broadest compatibility */}
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonicalURL} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImageFallbackURL} />

    {/* Structured Data — Single @graph for all entities */}
    <script type="application/ld+json" is:inline set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@graph": [
        {
          "@type": "Organization",
          "@id": siteUrl,
          "name": CONTENT.global.brandName,
          "url": siteUrl,
          "logo": new URL(CONTENT.assets.logoLight, siteUrl).href,
          "description": CONTENT.metadata.defaultDescription,
          "email": supportEmail,
          "foundingDate": "2025",
          "founder": {
            "@type": "Person",
            "name": "Fyaz Mohammed",
            "jobTitle": "Founder",
            "sameAs": ["https://www.linkedin.com/in/fyaz05/"]
          },
          "numberOfEmployees": "1-10",
          "knowsAbout": ["CAT exam preparation", "Adaptive learning systems", "Educational technology"],
          "areaServed": "IN",
          "sameAs": [
            "https://www.instagram.com/adapthublabs/",
            "https://www.linkedin.com/company/adapthub-labs/"
          ]
        },
        {
          "@type": "WebSite",
          "@id": new URL("#website", siteUrl).href,
          "name": CONTENT.global.brandName,
          "url": siteUrl,
          "description": CONTENT.metadata.defaultDescription,
          "inLanguage": "en",
          "publisher": {
            "@type": "Organization",
            "@id": `${siteUrl}#organization`,
            "name": CONTENT.global.brandName
          }
        },
        {
          "@type": "WebPage",
          "@id": `${canonicalURL.href}#webpage`,
          "name": title,
          "url": canonicalURL.href,
          "description": description,
          "keywords": keywords.join(", "),
          ...(datePublished ? { "datePublished": datePublished } : {}),
          ...(dateModified ? { "dateModified": dateModified } : {}),
          "inLanguage": "en",
          "isPartOf": {
            "@type": "WebSite",
            "@id": siteUrl,
            "name": "Home",
            "url": siteUrl
          },
          "speakable": {
            "@type": "SpeakableSpecification",
            "cssSelector": ["h1", "[data-speakable]", "h2"]
          }
        },
        {
          "@type": "BreadcrumbList",
          "itemListElement": breadcrumbItems
        },
        {
          "@type": "SoftwareApplication",
          "@id": new URL("#software", siteUrl).href,
          "name": CONTENT.global.brandName,
          "applicationCategory": "EducationalApplication",
          "operatingSystem": "Web",
          "url": siteUrl,
          "description": description,
          "screenshot": new URL("/og-image.avif", siteUrl).href,
          "featureList": [
            "Adaptive Diagnostic Calibration (ZPD Algorithm)",
            "Socratic AI Coaching with Hint Penalties",
            "Learning Velocity Telemetry (7-day rolling window)",
            "Spaced Repetition Queue (SRS) for memory decay prevention",
            "Mastery-Based Cognitive Locks (5-level progression)",
            "Quality Streaks (>70% accuracy, 15-min minimum sessions)",
            "Distractor Error Tagging (Trap identification & Calculation Errors)"
          ],
          "offers": {
            "@type": "Offer",
            "price": "0",
            "priceCurrency": "INR",
            "availability": "https://schema.org/InStock"
          }
        }
      ]
    })} />
    <slot name="head" />

    <ClientRouter />
    <style is:global>
      html,
      body {
        position: relative !important;
        min-height: 100% !important;
      }

      html.lenis {
        height: auto !important;
      }

      .lenis-smooth {
        scroll-behavior: auto !important;
      }

      body {
        overflow-x: hidden !important;
      }
    </style>
    
    {/* Low-End Device Detection & Performance Optimization Script */}
    <script is:inline>
      (function() {
        try {
          // 1. Check User Preference
          const prefersReduced = window.matchMedia('(prefers-reduced-motion: reduce)').matches;
          
          // 2. Check Hardware Concurrency (Logical Cores)
          const logicalProcessors = navigator.hardwareConcurrency || 4;
          
          // 3. Check Device Memory (RAM in GB) - API not available in all browsers
          const deviceMemory = navigator.deviceMemory || 8;
          
          // 4. Heuristic: Flag as "low-end" if cores < 4 or RAM < 4GB
          const isLowEnd = logicalProcessors < 4 || deviceMemory < 4;
          
          // 5. Apply Global Performance Class
          if (prefersReduced || isLowEnd) {
            document.documentElement.classList.add('is-reduced');
            // Optional: Add data attribute for CSS selectors
            document.documentElement.setAttribute('data-performance', 'low');
          } else {
            document.documentElement.setAttribute('data-performance', 'high');
          }

          // 6. Announcement Banner Persistence Check (Anti-Flicker)
          const isDismissed = sessionStorage.getItem("announcement-dismissed") === "true";
          if (isDismissed) {
            document.documentElement.setAttribute('data-announcement', 'dismissed');
          } else {
            document.documentElement.setAttribute('data-announcement', 'visible');
          }

          // 7. Loading Screen Hash Check
          if (window.location.hash) {
            document.documentElement.classList.add('hide-loader');
          }
        } catch (e) {
          console.error(e);
        }
      })();
    </script>
    <style>
      html.hide-loader #loading-screen {
        display: none !important;
      }
    </style>
  </head>
  <body class="relative min-h-screen">
    <svg aria-hidden="true" style="position: absolute; width: 0; height: 0; overflow: hidden; pointer-events: none;">
      <defs>
        <filter id="global-noise-filter">
          <feTurbulence type="fractalNoise" baseFrequency="0.75" numOctaves="3" stitchTiles="stitch" />
        </filter>
      </defs>
    </svg>
    <a
      href="#main-content"
      class="sr-only focus:not-sr-only focus:fixed focus:top-4 focus:left-4 focus:z-[10000] focus:px-4 focus:py-2 focus:bg-accent-yellow focus:text-black focus:rounded-full focus:font-bold focus:text-sm focus:shadow-lg"
    >
      Skip to main content
    </a>
    <LenisWrapper client:load>
      <div class="global-grid"></div>
      <NoiseOverlay />
      {showLoadingScreen && <LoadingScreen client:load />}
      <slot />
    </LenisWrapper>
  </body>
</html>
